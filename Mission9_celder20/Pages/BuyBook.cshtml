@page
@model Mission9_celder20.Pages.BuyBookModel
@{
}

<h2>Your Cart</h2>

@*BOOTSTRAP ADDED #1: Table in the "cart" section of the website
    has a "table-hover" feature added so that when a user has their mouse over a certain row on the table, it darkens so they know that is the row they are on. Along with this, for each of the "th" tags
    I added a color and made it so they are all uppercase*@
<table class="table table-bordered table-striped table-hover table-responsive">@*  *@
    <thead>
        <th class="text-primary text-uppercase">Book</th>
        <th class="text-primary text-uppercase">Quantity</th>
        <th class="text-primary text-uppercase">Price</th>
        <th class="text-primary text-uppercase">Subtotal</th>
    </thead>
    <tbody>
        @foreach(var i in Model.cart.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>$@i.Book.Price</td>
                <td>$@(i.Quantity * i.Book.Price)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>