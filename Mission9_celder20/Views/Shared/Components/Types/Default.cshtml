@{
}

@model IEnumerable<string>

@*For loop that will bring each of the category types for the books and make buttons out of them, filtering books by genre*@
<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="1" class="btn btn-danger">Home</a>
    <br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn btn-danger")">@t</a>
        <br />
    }
</div>