@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h3>@Model.Title</h3>

        <span class="badge bg-info" style="float:right">
            GENRE: @Model.Category
        </span>
    </div>

    @*Lists out all the infromation about each of the books*@
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Classification Type: @Model.Classification</li>
        <li>Category of Book: @Model.Category</li>
        <li>Page Count: @Model.PageCount</li>
        <li>Price: $@Model.Price</li>
    </ul>

    @*Post form for PathAndQuery*@
    <form method="post" asp-page="/BuyBook">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add Book to Cart</button>
        </span>
    </form>

</div>

<br />
